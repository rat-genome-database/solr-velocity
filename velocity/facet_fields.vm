#if($response.facetFields)
##    <h2 #annTitle("Facets generated by adding &facet.field= to the request")>Field Facets</h2>
<div id="facet_tabs">
<ul>
    #foreach($field in $response.facetFields)
        <li style="font-size:10"><font size="1"><a href="#$field.name">$import.read("http://localhost:8080/OntoSolr/select?v.template=termsstring&wt=velocity&q=id:(%22$field.name%22)")</a></font></li>
    #end
</ul>
    #foreach($field in $response.facetFields)
      <div id="$field.name" class="result-terms">
      ###<span class="facet-field">$field.name</span>

      <a href="javascript:facetQuery('$field.name', '*')">All</a>
      <ul>
#set ($fieldType=$field.name.substring($math.sub($field.name.length(),3), $field.name.length()))
        #foreach($facet in $field.values)
<li>
       #if($fieldType && $fieldType == "_id")
            <a href="javascript:facetQuery('$field.name', '$facet.name')">$import.read("http://localhost:8080/OntoSolr/select?v.template=termsstring&wt=velocity&q=id:(%22$facet.name%22)")</a> ($number.format("#*,*",$facet.count))
      #else
        
            <a href="javascript:facetQuery('$field.name', '$facet.name')">$facet.name</a> ($number.format("#*,*",$facet.count))
        #end
</li>
        #end
      </ul>
</div>
    #end
</div>
  #end
